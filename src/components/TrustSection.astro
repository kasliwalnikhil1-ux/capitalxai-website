---
interface Props {
  title?: string;
}

const { title = "Trusted by 100+ leading teams" } = Astro.props;

// Build logo list from company_logos folder (1–23)
const logos = Array.from({ length: 23 }, (_, i) => ({
  name: `Company ${i + 1}`,
  src: `/company_logos/${i + 1} bg png.png`,
}));
---

<section class="trust" aria-labelledby="trust-title">
  <div class="container">
    <h2 id="trust-title" class="trust-title">{title}</h2>
  </div>

  <div class="trust-marquee" aria-hidden="true">
    <div class="marquee-track">
      {/* Original set */}
      {logos.map((logo) => (
        <div class="marquee-logo">
          <img
            src={logo.src}
            alt={logo.name}
            loading="lazy"
            decoding="async"
            width="160"
            height="40"
          />
        </div>
      ))}
      {/* Duplicate set for seamless loop – same DOM nodes, images are already cached by browser */}
      {logos.map((logo) => (
        <div class="marquee-logo" aria-hidden="true">
          <img
            src={logo.src}
            alt=""
            loading="lazy"
            decoding="async"
            width="160"
            height="40"
          />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .trust {
    padding-block: 3rem 3.5rem;
    background: #0b1020;
    overflow: hidden;
    width: 100%;
    max-width: 100%;
  }

  .trust-title {
    margin: 0 0 2rem;
    font-size: clamp(1rem, 2vw, 1.125rem);
    font-weight: 500;
    color: var(--color-text-muted);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* ── Marquee wrapper with side fade gradients ── */
  .trust-marquee {
    position: relative;
    overflow: hidden;
    width: 100%;
    /* Side fade gradients – matches the FloatingImages marquee */
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 8%,
      black 92%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 8%,
      black 92%,
      transparent 100%
    );
  }

  /* ── Scrolling track ── */
  .marquee-track {
    display: flex;
    align-items: center;
    gap: 3rem;
    width: max-content;
    animation: trust-scroll 45s linear infinite;
    /* Pause on hover for accessibility */
    will-change: transform;
  }

  .trust-marquee:hover .marquee-track {
    animation-play-state: paused;
  }

  /* ── Individual logo cell ── */
  .marquee-logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 3.75rem;
  }

  .marquee-logo img {
    max-height: 3.25rem;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
    filter: grayscale(0%) brightness(1);
    opacity: 0.85;
    transition: opacity 0.25s ease, filter 0.25s ease;
  }

  .marquee-logo:hover img {
    opacity: 1;
    filter: grayscale(0%) brightness(1.08);
  }

  /* ── Keyframes: translate the first half (original set) out of view ── */
  @keyframes trust-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* ── Responsive adjustments ── */
  @media (max-width: 768px) {
    .trust {
      padding-block: 2.5rem 3rem;
    }

    .trust-title {
      margin-bottom: 1.5rem;
    }

    .marquee-track {
      gap: 2rem;
      animation-duration: 35s;
    }

    .marquee-logo img {
      max-height: 2.5rem;
    }
  }

  @media (max-width: 480px) {
    .marquee-track {
      gap: 1.5rem;
      animation-duration: 30s;
    }

    .marquee-logo img {
      max-height: 2rem;
    }
  }
</style>
