---
interface Props {
  title: string;
  logos?: { name: string; width?: number; height?: number }[];
}

const { title, logos = [] } = Astro.props;

// Placeholder: use data URIs or public SVGs for grayscale logos
const placeholderLogos = [
  { name: 'Company One' },
  { name: 'Company Two' },
  { name: 'Company Three' },
  { name: 'Company Four' },
  { name: 'Company Five' },
  { name: 'Company Six' },
];

const items = logos?.length > 0 ? logos : placeholderLogos;
---

<section class="trust" aria-labelledby="trust-title">
  <div class="container">
    <h2 id="trust-title" class="trust-title">{title}</h2>
    <ul class="trust-grid" role="list">
      {items.map((logo) => (
        <li class="trust-item">
          <span class="trust-logo" aria-label={logo.name}>
            {logo.name}
          </span>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .trust {
    padding-block: 4rem 5rem;
    background: var(--color-bg-elevated);
  }

  .trust-title {
    margin: 0 0 2.5rem;
    font-size: clamp(1rem, 2vw, 1.125rem);
    font-weight: 500;
    color: var(--color-text-muted);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem 1.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  @media (min-width: 640px) {
    .trust-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .trust-grid {
      grid-template-columns: repeat(6, 1fr);
      gap: 2rem;
    }
  }

  .trust-item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .trust-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 10rem;
    height: 2.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    filter: grayscale(1);
    opacity: 0.7;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    transition: opacity var(--transition);
  }

  .trust-logo:hover {
    opacity: 1;
  }
</style>
