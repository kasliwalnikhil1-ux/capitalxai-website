---
interface Props {
  title: string;
  logos?: { name: string; src?: string; width?: number; height?: number }[];
}

const { title, logos = [] } = Astro.props;

// Default company logo images from /public (SVG format)
const placeholderLogos = [
  { name: 'Company 1', src: '/company1.svg' },
  { name: 'Company 2', src: '/company2.svg' },
  { name: 'Company 3', src: '/company3.svg' },
  { name: 'Company 4', src: '/company4.svg' },
  { name: 'Company 5', src: '/company5.svg' },
];

const items = logos?.length > 0 ? logos : placeholderLogos;
---

<section class="trust" aria-labelledby="trust-title">
  <div class="container">
    <h2 id="trust-title" class="trust-title">{title}</h2>
    <ul class="trust-grid" role="list">
      {items.map((logo) => (
        <li class="trust-item">
          <div class="trust-logo" aria-label={logo.name}>
            {logo.src ? (
              <img
                src={logo.src}
                alt={logo.name}
                width={logo.width ?? 160}
                height={logo.height ?? 40}
                loading="lazy"
                decoding="async"
              />
            ) : (
              <span>{logo.name}</span>
            )}
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .trust {
    padding-block: 4rem 5rem;
    /* Match the hero/home background tone */
    background: #0b1020;
  }

  .trust-title {
    margin: 0 0 2.5rem;
    font-size: clamp(1rem, 2vw, 1.125rem);
    font-weight: 500;
    color: var(--color-text-muted);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem 1.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  @media (min-width: 640px) {
    .trust-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .trust-grid {
      grid-template-columns: repeat(6, 1fr);
      gap: 2rem;
    }
  }

  .trust-item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .trust-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: auto;
    max-width: 8rem;
    height: 3rem;
    transition: opacity var(--transition), transform var(--transition);
  }

  .trust-logo:hover {
    opacity: 0.95;
    transform: translateY(-1px);
  }

  .trust-logo img {
    max-width: 100%;
    max-height: 2.25rem;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }
</style>
