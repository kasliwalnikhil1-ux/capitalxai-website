---
interface Props {
  headlineTop: string;
  headlineBottom: string;
  subheading: string;
  primaryCta: { label: string; href: string };
  secondaryCta: { label: string; href: string };
}

const { headlineTop, headlineBottom, subheading, primaryCta, secondaryCta } = Astro.props;
const subheadingHtml = subheading.replaceAll('\n', '<br />');
---

<section id="hero" class="hero" aria-labelledby="hero-heading">
  <div class="hero-bg" aria-hidden="true">
    <div class="hero-glow" />
    <div class="hero-vignette" />
  </div>
  <div class="container hero-inner">
    <h1 id="hero-heading" class="hero-headline">
      <span class="headline-top">{headlineTop}</span>
      <span class="headline-bottom">
        {headlineBottom}
        <span class="headline-rocket" aria-hidden="true">ðŸš€</span>
      </span>
    </h1>
    <p class="hero-subheading" set:html={subheadingHtml} />
    <div class="hero-ctas">
      <a href={primaryCta.href} class="btn btn-primary">
        <span>{primaryCta.label}</span>
        <span class="arrow" aria-hidden="true">â†’</span>
      </a>
      <a href={secondaryCta.href} class="btn btn-secondary">
        <span>{secondaryCta.label}</span>
        <span class="arrow" aria-hidden="true">â†’</span>
      </a>
    </div>

    <div class="hero-preview" aria-hidden="true">
      <div class="preview-stack">
        <img class="preview-center" src="/center.png" alt="" loading="eager" decoding="async" />
        <img class="preview-left" src="/left.gif" alt="" loading="eager" decoding="async" />
        <img class="preview-right" src="/right.gif" alt="" loading="eager" decoding="async" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 620px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-block: 5.5rem 6rem;
    overflow: hidden;
    /* Slightly lighter base like the screenshot */
    background: #0b1020;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-glow {
    position: absolute;
    inset: 0;
    /* Corner glow: bright at bottom-right, fades quickly upward/left */
    background:
      radial-gradient(
        62% 72% at 100% 100%,
        rgba(255, 78, 213, 0.82) 0%,
        rgba(123, 92, 255, 0.58) 34%,
        rgba(255, 190, 135, 0.18) 50%,
        rgba(11, 16, 32, 0) 66%
      );
    filter: blur(6px);
    opacity: 0.9;
    transform: translate(2%, 4%);
  }

  .hero-vignette {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(120% 90% at 50% 10%, rgba(0, 0, 0, 0.55) 0%, rgba(0, 0, 0, 0.25) 40%, rgba(0, 0, 0, 0) 70%),
      linear-gradient(180deg, rgba(11, 16, 32, 0.86) 0%, rgba(11, 16, 32, 0.64) 45%, rgba(11, 16, 32, 0.88) 100%);
    pointer-events: none;
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 64rem;
  }

  .hero-headline {
    margin: 0 0 1.85rem;
    font-size: clamp(2.65rem, 6vw, 5.15rem);
    font-weight: 800;
    line-height: 1.03;
    letter-spacing: -0.02em;
  }

  .headline-top,
  .headline-bottom {
    display: block;
  }

  .headline-top {
    color: rgba(255, 255, 255, 0.98);
  }

  .headline-bottom {
    margin-top: 0.35rem;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.62) 0%, rgba(255, 255, 255, 0.28) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .headline-rocket {
    margin-left: 0.45rem;
    font-size: 0.72em;
    vertical-align: -0.06em;
    filter: saturate(1.05);
  }

  .hero-subheading {
    margin: 0 0 2rem;
    font-size: clamp(1rem, 1.8vw, 1.35rem);
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.7;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .hero-preview {
    margin-top: 3.75rem;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .preview-stack {
    position: relative;
    /* Wider than text, like screenshot */
    width: min(1320px, calc(100vw - 3rem));
    height: 520px;
  }

  .preview-center,
  .preview-left,
  .preview-right {
    position: absolute;
    display: block;
    border-radius: 22px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow:
      0 28px 70px rgba(0, 0, 0, 0.55),
      0 6px 18px rgba(0, 0, 0, 0.35);
  }

  .preview-center {
    left: 50%;
    top: 56%;
    height: 430px;
    width: auto;
    max-width: min(1120px, 88%);
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .preview-left {
    left: 0%;
    bottom: 8%;
    width: min(330px, 26%);
    transform: translate(0, 0);
    z-index: 5; /* sits in front of center */
  }

  .preview-right {
    right: -0.25%;
    bottom: 18%;
    width: min(480px, 40%);
    z-index: 4; /* sits in front of center */
    opacity: 0.98;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.65rem;
    height: 50px;
    padding: 0 1.35rem;
    font-size: 1.05rem;
    font-weight: 600;
    border-radius: 999px;
    transition: transform var(--transition), background-color var(--transition), color var(--transition), border-color var(--transition), opacity var(--transition);
  }

  .btn-primary {
    background: rgba(117, 126, 146, 0.9);
    color: rgba(255, 255, 255, 0.96);
    border: 1px solid rgba(255, 255, 255, 0.14);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.28);
  }

  .btn-primary:hover {
    opacity: 0.98;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: transparent;
    color: rgba(255, 255, 255, 0.92);
    border: 1px solid transparent;
  }

  .btn-secondary:hover {
    opacity: 0.95;
    transform: translateY(-1px);
  }

  .arrow {
    font-size: 1.15em;
    opacity: 0.95;
  }

  @media (max-width: 520px) {
    .hero {
      min-height: 560px;
      padding-block: 4.75rem 5.25rem;
    }

    .hero-ctas {
      gap: 0.75rem 1rem;
    }

    .hero-preview {
      margin-top: 2.25rem;
    }

    .preview-stack {
      height: 360px;
    }

    .preview-center {
      height: 270px;
      max-width: 100%;
      transform: translate(-50%, -50%);
    }

    .preview-left {
      width: 44%;
      bottom: 10%;
    }

    .preview-right {
      width: 58%;
      bottom: 22%;
      right: -4%;
    }
  }
</style>
