---
interface Props {
  siteName?: string;
  logoHref?: string;
}

const { siteName = 'CapitalxAI', logoHref = '/' } = Astro.props;
---

<footer class="footer">
  <div class="container footer-grid">
    <!-- Col 1: Brand -->
    <div class="footer-col footer-brand-col">
      <a href={logoHref} class="footer-brand" aria-label={`${siteName} home`}>
        <span class="footer-brand-mark">
          <img src="/capitalxai-logo.png" alt="" width="30" height="30" loading="lazy" decoding="async" />
        </span>
        <span class="footer-brand-text-block">
          <span class="footer-brand-name">{siteName}</span>
          <span class="footer-brand-tagline">AI-powered fundraising</span>
        </span>
      </a>
      <p class="footer-brand-desc">
        Find the right investors, analyze them with AI, access verified contacts, gain deep intelligence, and run personalized outreach to secure more fundraising meetings, all within a single integrated platform and in just seconds.
      </p>
    </div>

    <!-- Col 2: Product Links -->
    <div class="footer-col">
      <h4 class="footer-heading">Product</h4>
      <nav class="footer-links" aria-label="Product links">
        <a href="https://docs.capitalxai.com/" target="_blank" rel="noopener noreferrer">Product Tour</a>
        <a href="/pricing">Pricing</a>
        <a href="https://app.capitalxai.com/signup" target="_blank" rel="noopener noreferrer">Login</a>
        <a href="https://calendly.com/founders-capitalxai/20min" target="_blank" rel="noopener noreferrer">Book Demo</a>
      </nav>
    </div>

    <!-- Col 3: Company Links -->
    <div class="footer-col">
      <h4 class="footer-heading">Company</h4>
      <nav class="footer-links" aria-label="Company links">
        <a href="/vision">Our Vision</a>
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
        <a href="/content-safety">Content Safety</a>
        <a href="/careers" class="footer-careers-link">Careers <span class="hiring-badge">We're Hiring</span></a>
      </nav>
    </div>

    <!-- Col 4: Social -->
    <div class="footer-col">
      <h4 class="footer-heading">Connect</h4>
      <nav class="footer-links" aria-label="Social links">
        <a href="https://www.youtube.com/@CapitalxAI" target="_blank" rel="noopener noreferrer" class="footer-social-link">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19.13C5.12 19.56 12 19.56 12 19.56s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.43z"/>
            <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>
          </svg>
          YouTube
        </a>
        <a href="https://www.linkedin.com/company/capitalxai/" target="_blank" rel="noopener noreferrer" class="footer-social-link">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
            <rect x="2" y="9" width="4" height="12"/>
            <circle cx="4" cy="4" r="2"/>
          </svg>
          LinkedIn
        </a>
        <a href="https://x.com/capitalxaihq" target="_blank" rel="noopener noreferrer" class="footer-social-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          X (Twitter)
        </a>
      </nav>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="container footer-bottom">
    <p class="footer-copy">&copy; 2025-2026 ResourcePlan Solution Private Limited. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    padding-block: 3.5rem 0;
    background: linear-gradient(180deg, var(--color-bg) 0%, #0b1020 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.6fr 1fr 1fr 1fr;
    gap: 2.5rem 3rem;
  }

  /* Brand column */
  .footer-brand {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
  }

  .footer-brand:hover {
    opacity: 0.92;
  }

  .footer-brand-mark {
    width: 30px;
    height: 30px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .footer-brand-text-block {
    display: flex;
    flex-direction: column;
    gap: 0.05rem;
  }

  .footer-brand-name {
    font-size: 1.55rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.1;
    color: rgba(255, 255, 255, 0.96);
  }

  .footer-brand-tagline {
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    line-height: 1;
    color: rgba(255, 255, 255, 0.45);
  }

  .footer-brand-desc {
    margin: 1rem 0 0;
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.45);
    max-width: 30ch;
  }

  /* Column headings */
  .footer-heading {
    margin: 0 0 1.1rem;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Link lists */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .footer-links a {
    font-size: 0.925rem;
    color: rgba(255, 255, 255, 0.48);
    transition: color 0.2s ease;
    width: fit-content;
  }

  .footer-links a:hover {
    color: rgba(255, 255, 255, 0.92);
  }

  /* Careers link with badge */
  .footer-careers-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hiring-badge {
    display: inline-block;
    padding: 0.15rem 0.5rem;
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: rgba(99, 102, 241, 0.95);
    background: rgba(99, 102, 241, 0.12);
    border: 1px solid rgba(99, 102, 241, 0.22);
    border-radius: 9999px;
    line-height: 1.4;
    white-space: nowrap;
  }

  /* Social links with icons */
  .footer-social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
  }

  .footer-social-link svg {
    flex-shrink: 0;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer-social-link:hover svg {
    opacity: 1;
  }

  /* Bottom bar */
  .footer-bottom {
    margin-top: 3rem;
    padding-block: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .footer-copy {
    margin: 0;
    font-size: 0.82rem;
    color: rgba(255, 255, 255, 0.3);
    text-align: center;
  }

  /* Tablet: 2x2 grid */
  @media (max-width: 860px) {
    .footer {
      padding-block: 2.5rem 0;
    }

    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.25rem 2rem;
    }

    .footer-brand-col {
      grid-column: 1 / -1;
    }

    .footer-brand-desc {
      max-width: 44ch;
    }

    .footer-bottom {
      margin-top: 2.25rem;
    }
  }

  /* Mobile: single column */
  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-brand-col {
      grid-column: auto;
    }

    .footer-bottom {
      margin-top: 2rem;
      padding-block: 1.25rem;
    }

    .footer-copy {
      font-size: 0.78rem;
    }
  }
</style>
