---
interface Feature {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  title?: string;
  subheading?: string;
  features?: Feature[];
  gif1?: string;
  gif2?: string;
}

const { 
  title = 'Find mission-aligned investors', 
  subheading = 'Shortlist 3000+ ideal investors using deep AI research analysis across 1M+ websites, from VCs, angels, PE firms, accelerators to family offices.',
  features = [],
  gif1 = '/target_with_hyper.gif',
  gif2 = '/Persistent outreach strategy.gif'
} = Astro.props;

const defaultFeatures: Feature[] = [
  { 
    title: 'Target with hyper-precision',
    description: 'Find investors with strong reasons for recommendations and connect based on overlapping interests.',
    icon: 'compass'
  },
  {
    title: 'Persistent outreach strategy',
    description: 'Sequentially send emails to key executives at an investor firm.',
    icon: 'clock'
  },
  {
    title: 'Fresh current investor data',
    description: 'Unlike other platforms, we use advanced AI research capabilities to scan millions of web pages for real-time, clean data.',
    icon: 'refresh'
  },
];

const items = features?.length > 0 ? features : defaultFeatures;

// Use provided GIF paths, fallback to PNG if needed
const gif1Src = gif1 || '/target_with_hyper.gif';
// Use exact filename with space - browser will handle URL encoding
const gif2Src = gif2 || '/Persistent outreach strategy.gif';
---

<section class="features" aria-labelledby="features-title">
  <div class="container">
    <h2 id="features-title" class="features-title">{title}</h2>
    {subheading && <p class="features-subheading">{subheading}</p>}
    
    <div class="features-cards">
      <!-- Top Card: Target with hyper-precision (Full Width) -->
      <div class="feature-card feature-card-top">
        <div class="feature-card-content">
          <div class="feature-card-left">
            <div class="feature-icon-wrapper">
              <div class="feature-icon feature-icon-compass" aria-hidden="true">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
                  <path d="M12 2L14 8L20 10L14 12L12 18L10 12L4 10L10 8L12 2Z" stroke="currentColor" stroke-width="1.5" fill="none"/>
                  <circle cx="12" cy="12" r="2" fill="currentColor" opacity="0.6"/>
                </svg>
              </div>
            </div>
            <h3 class="feature-card-title">{items[0]?.title}</h3>
            <p class="feature-card-desc">{items[0]?.description}</p>
          </div>
          <div class="feature-card-right" style={`--mask-url: url("${String(gif1Src).replace(/"/g, '\\"')}")`}>
            <img 
              src={encodeURI(gif1Src)} 
              alt="Target with hyper-precision demonstration" 
              class="feature-gif"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>

      <!-- Bottom Row: Two Cards Side by Side -->
      <div class="features-bottom-row">
        <!-- Left Card: Persistent outreach strategy -->
        <div class="feature-card feature-card-bottom">
          <div class="feature-card-content">
            <div class="feature-card-left">
              <div class="feature-icon-wrapper">
                <div class="feature-icon feature-icon-clock" aria-hidden="true">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
                    <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  </svg>
                </div>
              </div>
              <h3 class="feature-card-title">{items[1]?.title}</h3>
              <p class="feature-card-desc">{items[1]?.description}</p>
            </div>
            <div class="feature-card-right" style={`--mask-url: url("${String(gif2Src).replace(/"/g, '\\"')}")`}>
              <img 
                src={encodeURI(gif2Src)} 
                alt="Persistent outreach strategy demonstration" 
                class="feature-gif"
                loading="lazy"
                decoding="async"
              />
            </div>
          </div>
        </div>

        <!-- Right Card: Fresh current investor data -->
        <div class="feature-card feature-card-bottom">
          <div class="feature-card-content feature-card-text-only">
            <div class="feature-icon-wrapper">
              <div class="feature-icon feature-icon-refresh" aria-hidden="true">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
                  <path d="M8 12C8 9.79 9.79 8 12 8C13.57 8 14.89 8.89 15.5 10.2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  <path d="M16 12C16 14.21 14.21 16 12 16C10.43 16 9.11 15.11 8.5 13.8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  <path d="M12 4V8M12 16V20M4 12H8M16 12H20" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
              </div>
            </div>
            <h3 class="feature-card-title">{items[2]?.title}</h3>
            <p class="feature-card-desc">{items[2]?.description}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .features {
    padding-block: 5rem 6rem;
    background: #0b1020; /* Match homepage color theme */
  }

  .features-title {
    margin: 0 0 1.25rem;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    text-align: center;
    letter-spacing: -0.02em;
    color: rgba(255, 255, 255, 0.98);
  }

  .features-subheading {
    margin: 0 auto 3.5rem;
    max-width: 56rem;
    font-size: clamp(1rem, 2vw, 1.25rem);
    text-align: center;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.7;
  }

  .features-cards {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .feature-card {
    background: rgba(22, 30, 52, 0.8); /* #161E34 - slightly lighter dark blue-grey */
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .feature-card-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .feature-card-text-only {
    grid-template-columns: 1fr;
  }

  .feature-card-left {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .feature-card-right {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }

  .feature-card-right::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.45) 0%, rgba(0, 0, 0, 0.18) 45%, transparent 100%);
    pointer-events: none;
    border-radius: 8px;
    -webkit-mask-image: var(--mask-url);
    mask-image: var(--mask-url);
    -webkit-mask-size: cover;
    mask-size: cover;
    -webkit-mask-position: center;
    mask-position: center;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-mode: alpha;
    mask-mode: alpha;
  }

  .feature-icon-wrapper {
    display: flex;
    align-items: flex-start;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #60A5FA; /* Light blue/cyan color for icons */
    flex-shrink: 0;
  }

  .feature-icon-compass::after {
    content: '';
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(96, 165, 250, 0.15) 0%, transparent 70%);
    z-index: -1;
  }

  .feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .feature-card-title {
    margin: 0;
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.3;
  }

  .feature-card-desc {
    margin: 0;
    font-size: clamp(0.9375rem, 1.8vw, 1.0625rem);
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
  }

  .feature-gif {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
    position: relative;
    z-index: 0;
  }

  /* Top card: GIF pinned to bottom with bottom cropping */
  .feature-card-top {
    overflow: hidden;
  }

  .feature-card-top .feature-card-left {
    align-self: center; /* Keep text vertically centered in card */
  }

  .feature-card-top .feature-card-right {
    align-self: flex-end; /* Only the GIF column goes to bottom */
    border-radius: 8px 8px 0 0;
    margin-bottom: calc(-2.5rem - 60px); /* cancel card bottom padding + extra 60px crop */
  }

  .feature-card-top .feature-gif {
    border-radius: 8px 8px 0 0;
  }

  .features-bottom-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  @media (max-width: 1024px) {
    .feature-card-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .feature-card-right {
      order: 1; /* Keep GIF below text on mobile */
    }

    .feature-card-top .feature-card-left {
      align-self: auto; /* Reset to normal flow */
    }

    .feature-card-top .feature-card-right {
      align-self: auto;
      border-radius: 8px 8px 0 0;
      margin-bottom: -60px; /* Keep bottom crop */
    }

    .features-bottom-row {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .features {
      padding-block: 4rem 5rem;
    }

    .features-subheading {
      margin-bottom: 2.5rem;
    }

    .features-cards {
      gap: 1.5rem;
    }

    .feature-card {
      padding: 2rem 1.5rem;
    }
  }
</style>
