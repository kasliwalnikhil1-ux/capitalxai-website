---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const positions = [
  {
    title: 'Market Research Specialist',
    type: 'Full-time',
    location: 'Remote',
    description:
      'Dive deep into venture capital and startup ecosystems to uncover investor trends, map market landscapes, and deliver actionable intelligence that powers our AI-driven outreach engine.',
    responsibilities: [
      'Analyze VC funding patterns, sector trends, and LP/GP dynamics',
      'Build and maintain proprietary investor databases with enriched profiles',
      'Collaborate with product and engineering to refine AI matching algorithms',
      'Produce weekly market briefs for internal teams and founder clients',
    ],
  },
  {
    title: 'Business Development Manager',
    type: 'Full-time',
    location: 'Remote',
    description:
      'Own the growth pipeline end-to-end — from identifying high-potential founders to closing partnerships that expand CapitalxAI\'s reach across geographies and verticals.',
    responsibilities: [
      'Develop and execute outbound strategies targeting seed-to-Series B founders',
      'Build relationships with accelerators, VCs, and ecosystem partners',
      'Negotiate and structure partnership agreements',
      'Track pipeline metrics and report insights to leadership',
    ],
  },
  {
    title: 'Client Success',
    type: 'Full-time',
    location: 'Remote',
    description:
      'Be the trusted advisor founders rely on throughout their fundraising journey — onboarding them seamlessly, driving engagement, and ensuring every campaign delivers measurable results.',
    responsibilities: [
      'Onboard new clients and craft personalized fundraising strategies',
      'Monitor campaign performance and proactively optimize outreach',
      'Serve as the primary point of contact for a portfolio of founder accounts',
      'Gather feedback to inform product improvements and new features',
    ],
  },
  {
    title: 'Full-Stack Software Developer',
    type: 'Full-time',
    location: 'Remote',
    description:
      'Shape the core platform that thousands of founders depend on — building scalable services, polished interfaces, and AI-powered features from concept to production.',
    responsibilities: [
      'Design and implement features across the React front-end and Node.js back-end',
      'Integrate AI/ML pipelines for investor matching and email personalization',
      'Optimize performance, reliability, and developer experience',
      'Participate in code reviews, architecture discussions, and sprint planning',
    ],
  },
];
---

<BaseLayout
  title="Careers – CapitalxAI"
  description="Join the CapitalxAI team. Explore open roles in market research, business development, client success, and engineering."
  canonical="/careers"
>
  <Header />
  <main id="main-content" class="careers-page">
    <!-- Hero -->
    <section class="careers-hero">
      <div class="hero-glow" aria-hidden="true"></div>
      <div class="container">
        <p class="hero-eyebrow">We're hiring</p>
        <h1 class="hero-headline">
          <span class="headline-white">Build the future of</span>
          <span class="headline-gradient">investor relations</span>
        </h1>
        <p class="hero-sub">
          CapitalxAI is on a mission to help every founder find the right investors. Join a small, high-impact team where your work directly shapes how startups raise capital.
        </p>
      </div>
    </section>

    <!-- Values strip -->
    <section class="values-strip">
      <div class="container">
        <div class="values-grid">
          <div class="value-item">
            <span class="value-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </span>
            <div>
              <h3 class="value-title">Flexible hours</h3>
              <p class="value-desc">Work when you're at your best — we care about output, not clock-watching.</p>
            </div>
          </div>
          <div class="value-item">
            <span class="value-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            </span>
            <div>
              <h3 class="value-title">Fully remote</h3>
              <p class="value-desc">Work from anywhere. Our team is distributed and async-first.</p>
            </div>
          </div>
          <div class="value-item">
            <span class="value-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
            </span>
            <div>
              <h3 class="value-title">High impact</h3>
              <p class="value-desc">Small team, big leverage — every contribution moves the needle.</p>
            </div>
          </div>
          <div class="value-item">
            <span class="value-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            </span>
            <div>
              <h3 class="value-title">Growth-oriented</h3>
              <p class="value-desc">We invest in your learning and give you room to grow fast.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Open positions -->
    <section class="positions-section">
      <div class="container">
        <h2 class="section-title">Open positions</h2>
        <p class="section-sub">Explore our current openings and find the role that's right for you.</p>

        <div class="positions-list">
          {positions.map((role) => (
            <div class="position-card">
              <div class="card-header">
                <div>
                  <h3 class="card-title">{role.title}</h3>
                  <div class="card-meta">
                    <span class="meta-badge">{role.type}</span>
                    <span class="meta-badge">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                      {role.location}
                    </span>
                  </div>
                </div>
              </div>
              <p class="card-desc">{role.description}</p>
              <ul class="card-responsibilities">
                {role.responsibilities.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
              <a href="mailto:hr@capitalxai.com?subject=Application – {encodeURIComponent(role.title)}" class="card-apply">
                Apply now
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Bottom CTA -->
    <section class="careers-cta">
      <div class="container cta-inner">
        <h2 class="cta-headline">Don't see a fit?</h2>
        <p class="cta-desc">We're always looking for exceptional people. Send us your resume and tell us how you'd contribute.</p>
        <a href="mailto:hr@capitalxai.com?subject=General Application – CapitalxAI" class="cta-btn">
          Send open application
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
        </a>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  /* ---- Page ---- */
  .careers-page {
    background: #0b1020;
    min-height: 100vh;
  }

  /* ---- Hero ---- */
  .careers-hero {
    position: relative;
    padding-block: 5rem 3.5rem;
    text-align: center;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: -30%;
    left: 50%;
    translate: -50% 0;
    width: 80%;
    height: 100%;
    background: radial-gradient(
      ellipse at center,
      rgba(99, 102, 241, 0.18) 0%,
      rgba(139, 92, 246, 0.12) 35%,
      rgba(59, 130, 246, 0.08) 60%,
      transparent 100%
    );
    filter: blur(72px);
    pointer-events: none;
  }

  .hero-eyebrow {
    position: relative;
    z-index: 1;
    display: inline-block;
    margin: 0 0 1.25rem;
    padding: 0.35rem 1rem;
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(99, 102, 241, 0.95);
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 9999px;
  }

  .hero-headline {
    position: relative;
    z-index: 1;
    margin: 0 0 1.5rem;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.12;
    letter-spacing: -0.025em;
  }

  .headline-white {
    display: block;
    color: rgba(255, 255, 255, 0.98);
  }

  .headline-gradient {
    display: block;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.5) 0%,
      rgba(200, 200, 220, 0.4) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-sub {
    position: relative;
    z-index: 1;
    max-width: 44rem;
    margin: 0 auto;
    font-size: clamp(1.05rem, 1.6vw, 1.2rem);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
  }

  /* ---- Values strip ---- */
  .values-strip {
    padding-block: 2.5rem 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .value-item {
    display: flex;
    align-items: flex-start;
    gap: 0.85rem;
  }

  .value-icon {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(99, 102, 241, 0.1);
    color: rgba(99, 102, 241, 0.85);
    border: 1px solid rgba(99, 102, 241, 0.15);
  }

  .value-title {
    margin: 0 0 0.3rem;
    font-size: 0.95rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.92);
  }

  .value-desc {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.55;
    color: rgba(255, 255, 255, 0.48);
  }

  /* ---- Positions section ---- */
  .positions-section {
    padding-block: 4rem 5rem;
  }

  .section-title {
    margin: 0 0 0.6rem;
    font-size: clamp(1.75rem, 3.5vw, 2.5rem);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.98);
    letter-spacing: -0.02em;
  }

  .section-sub {
    margin: 0 0 3rem;
    font-size: clamp(1rem, 1.4vw, 1.1rem);
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.6;
  }

  .positions-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* ---- Position card ---- */
  .position-card {
    background: rgba(22, 30, 52, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1rem;
    padding: 2.25rem 2.5rem;
    transition: border-color 0.25s ease, box-shadow 0.25s ease;
  }

  .position-card:hover {
    border-color: rgba(99, 102, 241, 0.25);
    box-shadow: 0 0 32px rgba(99, 102, 241, 0.06);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .card-title {
    margin: 0 0 0.6rem;
    font-size: clamp(1.2rem, 2vw, 1.4rem);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.95);
    letter-spacing: -0.01em;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.25rem 0.7rem;
    font-size: 0.78rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.55);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 9999px;
  }

  .card-desc {
    margin: 0 0 1.25rem;
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
  }

  .card-responsibilities {
    margin: 0 0 1.5rem;
    padding-left: 1.15rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .card-responsibilities li {
    font-size: 0.925rem;
    line-height: 1.55;
    color: rgba(255, 255, 255, 0.5);
  }

  .card-responsibilities li::marker {
    color: rgba(99, 102, 241, 0.6);
  }

  .card-apply {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.65rem 1.35rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.95);
    background: rgba(99, 102, 241, 0.15);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 9999px;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.15s ease;
  }

  .card-apply:hover {
    background: rgba(99, 102, 241, 0.25);
    transform: translateY(-1px);
  }

  .card-apply svg {
    transition: transform 0.2s ease;
  }

  .card-apply:hover svg {
    transform: translateX(3px);
  }

  /* ---- Bottom CTA ---- */
  .careers-cta {
    padding-block: 4rem 5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .cta-inner {
    text-align: center;
    max-width: 36rem;
    margin-inline: auto;
  }

  .cta-headline {
    margin: 0 0 0.75rem;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.96);
    letter-spacing: -0.02em;
  }

  .cta-desc {
    margin: 0 0 2rem;
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.5);
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    background: rgba(117, 126, 146, 0.9);
    color: rgba(255, 255, 255, 0.96);
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 9999px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.22);
    transition: transform 0.15s ease, opacity 0.2s ease;
  }

  .cta-btn:hover {
    transform: translateY(-1px);
    opacity: 0.95;
  }

  .cta-btn svg {
    transition: transform 0.2s ease;
  }

  .cta-btn:hover svg {
    transform: translateX(3px);
  }

  /* ---- Responsive ---- */
  @media (max-width: 1024px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .careers-hero {
      padding-block: 3.5rem 2.5rem;
    }

    .values-strip {
      padding-block: 2rem 2.5rem;
    }

    .values-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .positions-section {
      padding-block: 3rem 4rem;
    }

    .position-card {
      padding: 1.75rem 1.5rem;
    }

    .careers-cta {
      padding-block: 3rem 4rem;
    }

    .hero-glow {
      width: 120%;
      top: -20%;
    }
  }
</style>
