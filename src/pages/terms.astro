    padding: 3rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .terms-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .terms-title {
    margin: 0 0 0.5rem;
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    color: rgba(255, 255, 255, 0.98);
  }

  .terms-brand {
    margin: 0 0 0.25rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
  }

  .terms-date {
    margin: 0;
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .terms-intro {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin: 0 0 1rem;
  }

  .terms-divider {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    margin: 2rem 0;
  }

  .terms-section h2 {
    margin: 0 0 1rem;
    font-size: 1.375rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.95);
  }

  .terms-section h3 {
    margin: 1.5rem 0 0.75rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
  }

  .terms-section p {
    margin: 0 0 1rem;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.7;
  }

  .terms-section ul {
    margin: 0 0 1rem;
    padding-left: 1.5rem;
  }

  .terms-section li {
    margin-bottom: 0.5rem;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
  }

  .terms-section a {
    color: rgba(147, 197, 253, 1);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .terms-section a:hover {
    color: rgba(191, 219, 254, 1);
  }

  .terms-section strong {
    color: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 768px) {
    .terms-page {
      padding-block: 2rem 4rem;
    }

